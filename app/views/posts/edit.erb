<form action="/posts/<%=@post.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Post Name: </label><input type="text" name="name" value="<%=@post.name%>" id="name">
  <label>Content: </label><input type="text" name="content" value="<%=@post.content%>" id="content">
  <input type="submit" value="submit" id="submit">
</form>
